#include <stdio.h>
main(){
float pilihan, pilihan1, hasil ;
int menu;
printf ("Nama : Rinda Cahyati\n");
printf ("NIM  : 3143111021\n");
printf ("Prodi: D3 MANAJEMEN INFORMATIKA\n\n\n");
printf("pilih menu dibawah ini :\n\n");
printf ("1. Volume Kubus\n");
printf ("2. Luas Lingkaran\n");
printf ("3. Volume Silinder\n\n");
printf ("masukkan pilihan : "); scanf ("%d",&menu);
switch (menu) {
case 1:
printf ("masukkan panjang sisi kubus ="); scanf ("%f",&pilihan);
hasil =(pow(pilihan,3));
printf ("jadi volume kubus adalah= %.2f",hasil);
break;
case 2:
printf ("masukkan panjang jari-jari lingkaran ="); scanf ("%f",&pilihan);
hasil =(3.14*pow(pilihan,2));
printf ("jadi luas lingkaran adalah= %.2f",hasil);
break;
case 3:
printf ("masukkan panjang jari jari lingkaran ="); scanf ("%f",&pilihan);
printf ("masukkan tinggi silinder =");
scanf ("%f",&pilihan1);
hasil =(3.14*pow(pilihan,2)*pilihan1);
printf ("jadi volume silinder adalah= %.2f",hasil);
break;
default:
    printf("\n\Input tidak diketahui\n\n");
}
}
